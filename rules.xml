<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Apply the following rules to standard Plone pages -->
    <rules css:if-content="#visual-portal-wrapper">

        <theme href="index.html" />

        <drop
            css:content="#viewlet-above-content .carousel" 
        />

        <replace 
            css:theme-children="#header-wrapper" 
            css:content="#portal-top #portal-header" 
        />

        <replace 
            css:theme-children="#fullscreen-carousel" 
            css:content=".carousel" 
            method="raw"
        />

        <replace 
            css:theme-children="ul.nav" 
            css:content="#portal-globalnav" 
            method="raw"
        />

        <drop
            css:content="#portal-header #portal-globalnav" 
        />

        <replace 
            css:theme-children="#main" 
            css:content-children="#portal-columns #portal-column-content" 
        />

        <replace 
            css:theme-children="#footer-wrapper #portal-doormat-wrapper" 
            css:content="#portal-footer-wrapper #doormat-container" 
        />
        
        <replace 
            css:theme-children="#footer-wrapper #portal-colophon-wrapper" 
            css:content="#portal-footer-wrapper #portal-colophon" 
        />
        
        <!-- Replace title with Plone's page title  -->
        <replace css:theme="html head title" css:content="html head title" />

        <!-- Copy base tag from Plone -->
        <before css:theme-children="html head" css:content="html head base" />

        <!-- Copy link, style, meta tags from Plone head -->
        <after css:theme-children="html head"
               content="/html/head/link | /html/head/style | /html/head/meta" />

        <!-- merge classes from Plone body with theme body -->
        <merge attributes="class" css:theme="body" css:content="body" />

        <!-- Copy script tags from Plone head to end of body -->
        <after css:theme-children="html body" css:content="html head script" />

        <!-- Insert your own rules here -->

    </rules>

</rules>
